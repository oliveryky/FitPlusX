<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity.ViewActivityPedometer">

    <fragment
        android:name="com.app.fitplusx.project.ViewFragment.ViewNavigationTablet"
        android:id="@+id/PedometerNav"
        android:layout_width="@dimen/nav_dimension"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnWeight="0"/>

    <fragment
        android:name="com.app.fitplusx.project.ViewFragment.ViewFragmentPedometer"
        android:id="@+id/PedometerView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_columnWeight="1"/>
</GridLayout>