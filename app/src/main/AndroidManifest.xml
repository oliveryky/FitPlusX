<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.fitnessapp.project">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityBMI" />
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityEditRegimen" />
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityLogin" />
        <activity
            android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityEditProfile"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityUserProfile" />
        <activity android:name="com.app.fitnessapp.project.ViewActivity.ViewActivityDashboard" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>